<%= render partial: 'shared/form', locals: { product: product } %>
 <% @products.each do |product| %>
        <div class="col-sm-2 col-md-12" style="float: left; ">
        <h1 style="text-align: left;"><%= product.name %></h1>
        <img src="<%= product.image_url %>" alt="<%= product.name %>">
        <p style="margin-left: auto; margin-right: auto; width: 100%;"><%= product.name %> </p>
        <p style="margin-left: auto; margin-right: auto; width: 100%;"><%= product.description %></p>
        <strong style="margin-left: auto; margin-right: auto; width: 100%;"><%= product.price %></strong>
        

        <p style="margin-left: auto; margin-right: auto; width: 100%;"><%= link_to 'Show', product %></p>
        <p style="margin-left: auto; margin-right: auto; width: 100%;"><%= link_to 'Edit', edit_product_path(product) %></p>
        <p style="margin-left: auto; margin-right: auto; width: 100%;"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
       

        </div><!-- /col -->
      <% end %>