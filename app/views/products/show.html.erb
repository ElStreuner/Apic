   <div class="row">
   <div class="col-md-8">
      <%=image_tag(@product.image_url, class: "img-responsive", id: "productpic") %>
   </div>
   <div class="col-md-4" id="sentence">
      <p>
         <strong>Name:</strong>
         <%=@product.name %>
      </p>
      <p>
         <strong>Description:</strong>
         <%=@product.description %>
      </p>
      <p>
         <strong>Color:</strong>
         <%=@product.color %>
      </p>
      <p>
         <strong>Price:</strong>
         <%=@product.price %>
      </p>
   </div>
   <p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div> </p>
</div>
