          <a class="navbar-brand">Märzstraße</a>
        </div>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav" id="links">
          <li><p> <%= link_to "Contact", static_pages_contact_path%></p></li>
          <li><p> <%= link_to "About", static_pages_about_path%></p></li>
          <li><p> <%= link_to "Products", products_path%> </p></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li>
            <% if user_signed_in? %>
            <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
            <% else %>
            <%= link_to('Login', new_user_session_path) %>
            <% end %>
          </li>
        </ul>
          <div class="col-sm-4 col-md-4 pull-right suchfeld" id="rightwing">
                <%= form_tag("/products", method: "get") do %>
              <%= label_tag(:q, "Search for:") %>
          <%= text_field_tag(:q) %>
          <div class="Searchit">
          <%= submit_tag("Search") %>
          </div>
          <% end %>
          </div>
          </div>
        </nav>
      

      
